{{#> layout}}
  {{#*inline "content"}}
    <article>
      <h1>{{post.title}}</h1>
      <div class="post-meta">
        <time datetime="{{post.createdAt}}">{{formatDate post.createdAt}}</time>
        {{#if (eq post.type 'ai')}}
          <span class="ai-indicator">AI-generated</span>
        {{/if}}
      </div>

      {{{post.content}}}

      {{#if post.tags}}
        <div class="post-footer">
          <div class="post-tags">
            {{#each post.tags}}
              <a href="/tag/{{slugify this}}.html" class="tag">{{this}}</a>
            {{/each}}
          </div>
        </div>
      {{/if}}
    </article>
  {{/inline}}
{{/layout}}
