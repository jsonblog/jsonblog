{{#> layout}}
  <div class="container">
    <header class="page-header">
      <h1>Posts in category "{{category}}"</h1>
      <p class="category-count">{{posts.length}} post{{#unless (eq posts.length 1)}}s{{/unless}}</p>
    </header>

    <div class="posts">
      {{#each posts}}
        <article class="post-preview{{#if (eq this.type 'ai')}} ai-post{{/if}}">
          <h2>
            <a href="/{{this.slug}}.html">{{this.title}}</a>
            {{#if (eq this.type 'ai')}}
              <span class="ai-badge">[AI-Generated]</span>
            {{/if}}
          </h2>
          {{#if this.description}}
            <p class="post-description">{{this.description}}</p>
          {{/if}}
          <div class="post-meta">
            <time datetime="{{this.createdAt}}">{{formatDate this.createdAt}}</time>
            {{#if this.categories}}
              <div class="post-categories">
                {{#each this.categories}}
                  <a href="/category/{{slugify this}}.html" class="category">{{this}}</a>
                {{/each}}
              </div>
            {{/if}}
          </div>
        </article>
      {{/each}}
    </div>

    <nav class="breadcrumb">
      <a href="/">‚Üê Back to all posts</a>
    </nav>
  </div>
{{/layout}}