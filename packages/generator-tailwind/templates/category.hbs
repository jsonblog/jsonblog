{{#> layout}}
  {{#*inline "content"}}
    <header class="mb-10 pb-6 border-b-2 border-gray-200">
      <h1 class="mt-0 text-[2.25rem] leading-tight font-semibold tracking-tight mb-3">Posts in category "{{category}}"</h1>
      <p class="text-[0.76rem] text-gray-600 mt-3">{{posts.length}} post{{#unless (eq posts.length 1)}}s{{/unless}}</p>
    </header>

    <div class="posts">
      {{#each posts}}
        <article class="mb-10 pb-8 border-b border-gray-200 last:border-b-0 transition-all duration-300 hover:translate-y-[-2px]">
          <h2 class="{{#if (eq this.type 'ai')}}text-[1.08rem] text-gray-600 opacity-85{{else}}text-[1.8rem] text-gray-900{{/if}} mb-2 leading-tight">
            <a href="/{{this.slug}}" class="no-underline {{#if (eq this.type 'ai')}}text-gray-600{{else}}text-gray-900{{/if}} transition-colors hover:text-[#0066cc]">{{this.title}}</a>
            {{#if (eq this.type 'ai')}}
              <span class="inline-block text-[0.63em] font-medium text-gray-500 border border-gray-300 px-2 py-1 ml-2 rounded bg-gray-50 align-middle tracking-wide">[AI-Generated]</span>
            {{/if}}
          </h2>
          {{#if this.description}}
            <p class="my-3 {{#if (eq this.type 'ai')}}text-gray-500{{else}}text-gray-700{{/if}} leading-normal text-[0.9rem]">{{this.description}}</p>
          {{/if}}
          <div class="text-[0.76rem] text-gray-600">
            <time datetime="{{this.createdAt}}">{{formatDate this.createdAt}}</time>
            {{#if this.categories}}
              <div class="inline-block mt-3">
                {{#each this.categories}}
                  <a href="/category/{{slugify this}}" class="inline-block px-3 py-2 mr-3 mb-3 bg-gray-50 border border-gray-300 text-[0.76rem] no-underline rounded font-medium transition-all hover:bg-black hover:text-white hover:border-black">{{this}}</a>
                {{/each}}
              </div>
            {{/if}}
          </div>
        </article>
      {{/each}}
    </div>

    <nav class="mt-10 pt-6 border-t border-gray-200">
      <a href="/" class="text-[#0066cc] text-[0.85rem]">‚Üê Back to all posts</a>
    </nav>
  {{/inline}}
{{/layout}}
