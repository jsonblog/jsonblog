{{#> layout}}
  {{#*inline "content"}}
    <header class="archive-header animate-fade-in-up">
      <span class="archive-type">Tag Archive</span>
      <h1 class="archive-title">{{tag}}</h1>
      <p class="archive-count">
        {{posts.length}} article{{#unless (eq posts.length 1)}}s{{/unless}}
      </p>
    </header>

    <div class="grid md:grid-cols-2 gap-12">
      {{#each posts}}
        <article class="post-card group animate-fade-in-up">
          <div class="post-card__meta mb-3">
            {{#if this.createdAt}}
              <time datetime="{{this.createdAt}}" class="font-sans text-xs uppercase tracking-wider text-neutral-500">
                {{formatDate this.createdAt}}
              </time>
            {{/if}}
          </div>

          <h2 class="post-card__title">
            <a href="/{{this.slug}}">
              {{this.title}}
            </a>
            {{#if (eq this.type 'ai')}}
              <span class="post-ai-badge ml-2 align-middle">AI-assisted</span>
            {{/if}}
          </h2>

          {{#if this.description}}
            <p class="post-card__excerpt text-base line-clamp-3">
              {{this.description}}
            </p>
          {{/if}}

          {{#if this.categories}}
            <div class="mt-4 flex flex-wrap gap-2">
              {{#each this.categories}}
                <a href="/category/{{slugify this}}" class="tag">{{this}}</a>
              {{/each}}
            </div>
          {{/if}}
        </article>
      {{/each}}
    </div>

    <nav class="mt-16 pt-8 border-t border-neutral-200 text-center">
      <a href="/" class="font-sans text-sm uppercase tracking-widest text-neutral-600 hover:text-burgundy transition-colors no-underline">
        ‚Üê Back to all posts
      </a>
    </nav>
  {{/inline}}
{{/layout}}
