{{#> layout}}
  {{#*inline "content"}}
    <!-- Archive Header -->
    <div class="max-w-content mx-auto mb-12">
      <header class="mb-12 pb-8 border-b border-ink-600">
        <div class="font-mono text-xs uppercase tracking-wider text-chalk-400 mb-3">
          Tag Archive
        </div>
        <h1 class="font-headline font-bold text-5xl text-chalk-100 mb-3">
          {{tag}}
        </h1>
        <p class="font-mono text-sm text-chalk-400">{{posts.length}} posts</p>
      </header>
    </div>

    <!-- Post Cards -->
    <div class="space-y-6">
      {{#each posts}}
        <article class="lab-card">
          <div class="post-meta flex items-center gap-4">
            {{#if this.createdAt}}
              <time datetime="{{this.createdAt}}">{{formatDate this.createdAt}}</time>
            {{/if}}
            {{#if (eq this.type 'ai')}}
              <span class="ai-badge">AI</span>
            {{/if}}
          </div>

          <h2 class="post-title">
            <a href="/{{this.slug}}">{{this.title}}</a>
          </h2>

          {{#if this.tags}}
            <div class="flex flex-wrap gap-2 mt-4">
              {{#each this.tags}}
                <a href="/tag/{{slugify this}}" class="tag">{{this}}</a>
              {{/each}}
            </div>
          {{/if}}
        </article>
      {{/each}}
    </div>

    <!-- Back Link -->
    <div class="mt-12">
      <a href="/" class="font-mono text-sm text-accent-blue hover:text-accent-cyan uppercase tracking-wider">‚Üê Back to posts</a>
    </div>
  {{/inline}}
{{/layout}}
