{{#> layout}}
  {{#*inline "content"}}
    <article class="max-w-content mx-auto animate-fade-in-up">
      <!-- Post Header -->
      <header class="post-header">
        {{#if post.categories}}
          <span class="post-category">
            {{post.categories.[0]}}
          </span>
        {{/if}}

        <h1 class="post-title">
          {{post.title}}
        </h1>

        <div class="post-byline">
          {{#if post.createdAt}}
            <time datetime="{{post.createdAt}}" class="post-date">
              {{formatDate post.createdAt}}
            </time>
          {{/if}}
          {{#if (eq post.type 'ai')}}
            <span class="post-ai-badge">AI-assisted</span>
          {{/if}}
        </div>

        <div class="post-header-divider"></div>
      </header>

      <!-- Post Content with Drop Cap Support -->
      <div class="post-content content">
        {{{post.content}}}
      </div>

      <!-- Post Footer -->
      <footer class="post-footer">
        {{#if post.tags}}
          <div class="post-tags">
            <span class="tags-label">Topics</span>
            <div class="flex flex-wrap gap-3">
              {{#each post.tags}}
                <a href="/tag/{{slugify this}}" class="tag">{{this}}</a>
              {{/each}}
            </div>
          </div>
        {{/if}}

        {{#if post.categories}}
          {{#unless post.tags}}
            <div class="post-tags">
              <span class="tags-label">Categories</span>
              <div class="flex flex-wrap gap-3">
                {{#each post.categories}}
                  <a href="/category/{{slugify this}}" class="tag">{{this}}</a>
                {{/each}}
              </div>
            </div>
          {{/unless}}
        {{/if}}
      </footer>

      <!-- Back to posts link -->
      <div class="text-center mt-12">
        <a href="/" class="font-sans text-sm uppercase tracking-widest text-neutral-600 hover:text-burgundy transition-colors no-underline">
          ‚Üê Back to all posts
        </a>
      </div>
    </article>
  {{/inline}}
{{/layout}}
