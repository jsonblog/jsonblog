<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{#if post}}{{post.title}} - {{/if}}{{#if page}}{{page.title}} - {{/if}}{{blog.site.title}}</title>
  <meta name="description" content="{{#if post}}{{post.description}}{{else if page}}{{page.description}}{{else}}{{blog.site.description}}{{/if}}">
  <link rel="stylesheet" href="/templates/tailwind.css">
  <link rel="alternate" type="application/rss+xml" title="{{blog.site.title}} RSS Feed" href="/rss.xml">
  {{#if blog.site.url}}
  <link rel="canonical" href="{{blog.site.url}}">
  {{/if}}
</head>
<body class="bg-ink-900 bg-blueprint-grid bg-grid-32 animate-fade-in">
  <div class="max-w-wide mx-auto px-4 md:px-8 py-8 md:py-12">

    <!-- Lab Header -->
    <header class="lab-header">
      <h1 class="site-title">{{blog.site.title}}</h1>

      {{#if blog.site.description}}
        <p class="site-description">{{blog.site.description}}</p>
      {{/if}}

      <nav class="site-navigation">
        <a href="/">Home</a>
        {{#each pages}}
          <a href="/{{slug}}">{{title}}</a>
        {{/each}}
      </nav>
    </header>

    <!-- Main Content -->
    <main>
      {{> content}}
    </main>

    <!-- Footer -->
    <footer class="lab-footer">
      <p>
        Generated by <a href="https://jsonblog.dev" class="text-accent-blue hover:text-accent-cyan">JSONBlog</a>
        {{#if generatorName}}â€¢ {{generatorName}}{{#if generatorVersion}} v{{generatorVersion}}{{/if}}{{/if}}
      </p>
    </footer>
  </div>
</body>
</html>
